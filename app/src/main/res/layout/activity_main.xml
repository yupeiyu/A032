<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.a032.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText"
                    android:layout_weight="1"
                    android:hint="@string/phoneNumber" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button10"
                    android:background="@drawable/my_delete"
                    android:onClick="buttonsClick" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/d1"
                        android:background="@drawable/my_numbers"
                        android:id="@+id/button1"
                        android:textSize="48dp"
                        android:textColor="#800000"
                        android:textStyle="bold"
                        android:onClick="buttonsClick" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/d2"
                        android:background="@drawable/my_numbers"
                        android:id="@+id/button2"
                        android:textSize="48dp"
                        android:textColor="#800000"
                        android:textStyle="bold"
                        android:onClick="buttonsClick" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/d3"
                        android:background="@drawable/my_numbers"
                        android:id="@+id/button3"
                        android:textSize="48dp"
                        android:textColor="#800000"
                        android:textStyle="bold"
                        android:onClick="buttonsClick" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/d4"
                        android:background="@drawable/my_numbers"
                        android:id="@+id/button4"
                        android:textSize="48dp"
                        android:textColor="#800000"
                        android:textStyle="bold"
                        android:onClick="buttonsClick" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/d5"
                        android:background="@drawable/my_numbers"
                        android:id="@+id/button5"
                        android:textSize="48dp"
                        android:textColor="#800000"
                        android:textStyle="bold"
                        android:onClick="buttonsClick" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/d6"
                        android:background="@drawable/my_numbers"
                        android:id="@+id/button6"
                        android:textSize="48dp"
                        android:textColor="#800000"
                        android:textStyle="bold"
                        android:onClick="buttonsClick" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/d7"
                        android:id="@+id/button7"
                        android:background="@drawable/my_numbers"
                        android:textSize="48dp"
                        android:textColor="#800000"
                        android:textStyle="bold"
                        android:onClick="buttonsClick" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/d8"
                        android:id="@+id/button8"
                        android:background="@drawable/my_numbers"
                        android:textSize="48dp"
                        android:textColor="#800000"
                        android:textStyle="bold"
                        android:onClick="buttonsClick" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/d9"
                        android:id="@+id/button9"
                        android:background="@drawable/my_numbers"
                        android:textSize="48dp"
                        android:textColor="#800000"
                        android:textStyle="bold"
                        android:onClick="buttonsClick" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/button11"
                        android:background="@drawable/my_dial"
                        android:onClick="buttonsClick" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/d0"
                        android:id="@+id/button0"
                        android:background="@drawable/my_numbers"
                        android:textSize="48dp"
                        android:textColor="#800000"
                        android:textStyle="bold"
                        android:onClick="buttonsClick" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/button12"
                        android:background="@drawable/my_cancel"
                        android:onClick="buttonsClick" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
